<style>
  .program-hero {
    padding: 10rem 0 6rem;
    background: linear-gradient(135deg, var(--gold) 0%, #F4A000 100%);
    color: white;
    text-align: center;
  }
  
  .program-hero h1 { 
    color: white; 
    margin: 1rem 0; 
  }
  
  .program-hero .section-label { 
    color: white; 
  }
  
  .hero-subtitle { 
    font-size: 1.3rem; 
    max-width: 700px; 
    margin: 0 auto; 
    opacity: 0.95; 
    color: white; 
  }

  .sutras-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
    margin-top: 3rem;
  }

  .sutra-card {
    background: white;
    padding: 3rem;
    border-radius: 20px;
    box-shadow: var(--shadow-lg);
    text-align: center;
    transition: transform 0.3s ease;
  }

  .sutra-card:hover {
    transform: translateY(-8px);
  }

  .sutra-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
  }

  .sutra-card h3 {
    color: var(--gold);
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .sanskrit {
    font-family: 'Playfair Display', serif;
    font-style: italic;
    color: var(--blue);
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .sutra-card > p {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .teaching-points {
    text-align: left;
    list-style: none;
    padding-left: 0;
  }

  .teaching-points li {
    padding: 0.6rem 0;
    padding-left: 1.8rem;
    position: relative;
    color: var(--text-secondary);
  }

  .teaching-points li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--gold);
    font-weight: bold;
  }

  .practices-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .practice-card {
    background: white;
    padding: 2.5rem;
    border-radius: 16px;
    box-shadow: var(--shadow-md);
    text-align: center;
  }

  .practice-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .practice-card h3 {
    color: var(--blue);
    margin-bottom: 1rem;
  }


  @media (max-width: 768px) {
    .sutras-grid,
    .practices-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
