---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Join Programs - The10 Youth Excellence Center">
  <section class="section-large">
    <div class="container">
      <div class="section-header text-center">
        <span class="section-label">JOIN US</span>
        <h1>Program Enrollment</h1>
        <p>Take the next step in your excellence journey.</p>
      </div>
      
      <div class="content-placeholder">
        <p>Enrollment forms and upcoming program dates.</p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .content-placeholder {
    text-align: center;
    padding: 4rem;
    background: var(--sand);
    border-radius: 12px;
    margin-top: 2rem;
    color: var(--text-secondary);
  }
</style>
